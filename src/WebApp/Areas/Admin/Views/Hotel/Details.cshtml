@model WebApp.Models.Hotel

@{
    ViewData["Title"] = "Details";
}

<h1>Details - @Model.Name</h1>

<div class="card">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-3 fw-bold">Name:</div>
            <div class="col-9">@Html.DisplayFor(model => model.Name)</div>
        </div>
        <div class="row mb-3">
            <div class="col-3 fw-bold">Location:</div>
            <div class="col-9">@Html.DisplayFor(model => model.Location)</div>
        </div>
        <div class="row mb-3">
            <div class="col-3 fw-bold">Price:</div>
            <div class="col-9">@Html.DisplayFor(model => model.Price)</div>
        </div>
        <div class="row mb-3">
            <div class="col-3 fw-bold">Description:</div>
            <div class="col-9">@Html.Raw(Model.Description)</div>
        </div>
    </div>

</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.HotelId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
