@model Model.Hotel

@{
    ViewData["Title"] = "Create";
}
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="d-flex container justify-content-between">
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-header">
            Hotel Information
        </div>
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" placeholder="Hotel name" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Address</label>
                    <input type="text" class="form-control" placeholder="Hotel address" asp-for="Location">
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Price</label>
                    <input class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-lg-8 mb-3">
            <div class="card">
                <div class="card-header">
                    Hotel Description
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div id="_description"></div>
                        <input type="hidden" asp-for="Description" id="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4 mb-3">
            <div class="card">
                <div class="card-header">
                    Hotel Thumbnail
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="mb-4 d-flex justify-content-center">
                            <img id="selectedImage" src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg" alt="example placeholder" style="width: 300px;" />
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="btn btn-primary btn-rounded">
                                <label class="form-label text-white m-1" for="thumbnail">Choose file</label>
                                <input type="file" name="imageFile" class="form-control d-none" id="thumbnail" onchange="displaySelectedImage(event, 'selectedImage')" />
                            </div>
                        </div>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>
    <script src="~/admin/js/site.js" asp-append-version="true"></script>
}
