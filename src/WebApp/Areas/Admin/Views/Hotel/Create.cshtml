@model Model.Hotel

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        Hotel Information
    </div>
    <div class="card-body">
        <form>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" placeholder="Hotel name" asp-for="Name">
            </div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Address</label>
                    <input type="text" class="form-control" placeholder="Hotel address" asp-for="Location">
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Price</label>
                    <input type="number" class="form-control" asp-for="Price">
                </div>
            </div>
            <div class="mb-3 border-0 border-bottom">
                <label class="form-label">Description</label>
                <div id="Description" name="Description" asp-for="Description" style="min-height: 150px;">
                    @if (Model.Description != null)
                    {
                        @Html.Raw(Model.Description)
                    }
                </div>
            </div>
        </form>
    </div>
</div>

@section Styles{
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
}

@section Scripts{
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        var quill = new Quill('#Description', {
            theme: 'snow',
            placeholder: 'Hotel Description'
        });
        quill.on('text-change', function () {
            document.getElementById('Description').value = quill.root.innerHTML;
        });
    </script>
}