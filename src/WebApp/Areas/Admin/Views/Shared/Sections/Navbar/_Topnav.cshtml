@{
    var actionName = ViewContext.RouteData.Values["action"] as string;
    var controllerName = ViewContext.RouteData.Values["controller"] as string;

    string GetActiveClass(string currentAction) => actionName == currentAction ? " active" : "";
}
<nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme" id="layout-navbar">
    <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
        <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
            <i class="bx bx-menu bx-sm"></i>
        </a>
    </div>
    <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
        <div class="navbar-nav align-items-center">
            <div class="d-flex align-items-center bd-highlight">
                <h4 class="py-3 mt-3">
                    <nav style="--bs-breadcrumb-divider: '|';" aria-label="breadcrumb">
                        <ol class="breadcrumb mt-3">
                            <li class="breadcrumb-item">
                                <a asp-action="Index" asp-controller="Home" asp-area="Admin">
                                    <i class="menu-icon fa-solid fa-house"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item@(GetActiveClass("Index"))" aria-current="page">
                                <a asp-action="@actionName" asp-controller="@controllerName" asp-area="Admin">
                                    @controllerName
                                </a>
                            </li>
                            @if (actionName != "Index")
                            {
                                <li class="breadcrumb-item active" aria-current="page">
                                    @actionName
                                </li>
                            }
                        </ol>
                    </nav>
                </h4>
            </div>
        </div>
    </div>
</nav>
